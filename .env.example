# =================================================================
# CONFIGURACIÓN DE BASE DE DATOS (POSTGRES)
# =================================================================

# Nombre de la base de datos que se creará al inicio
DB_NAME=red_social_db

# Usuario administrador principal (Superuser de Docker)
DB_USER=admin_user
DB_PASSWORD=pon_aqui_tu_password_segura

# Puerto donde escuchará Postgres (Default: 5432)
DB_PORT=5432

# =================================================================
# ROLES DE ACCESO (Definidos en 01_roles.sql)
# =================================================================

# Rol para desarrollo y SQLTools
DEV_USER=developer
DEV_PASSWORD=dev_password_provisional

# Rol para la conexión de la API / Backend
APP_USER=app_user
APP_PASSWORD=app_password_provisional

# Rol para consultas de solo lectura
READ_ONLY_USER=read_only_user
READ_ONLY_PASSWORD=read_only_password_provisional